<div class="container">
  <h1 class="text-center"> Labs </h1>
  <section class="row text-center cities-controls">
      <a href="<%= new_lab_path %>" class="btn btn-default"> New Lab </a>
  </section>
  <table class="table">
    <thead>
      <tr>
        <th class="text-center">Laboratorie name</th>
        <th class="text-center">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @labs.each do |a| %>
        <tr>
          <ul>
            <td class="text-center"><strong><%= a.lab_name %></strong></td>
            <td class="text-center"><a href="<%= lab_path(a.id) %>" data-method="delete" class="btn btn-danger"> Delete </a>
            <a href="<%= edit_lab_path(a.id) %>" class="btn btn-primary"> Edit </a>
            <a href="<%= lab_path(a.id) %>" class="btn btn-info"> Show </a></td>
          </ul>
        </article>
      <% end if @labs.any? %>
    </tbody>
  </table>

</div>
